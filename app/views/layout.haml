%html
	%head
		%title MiniBuildr
		%link{:rel=>'stylesheet', :media => "screen",:href=>'/main.css', :type => "text/css"}
		%script{:src=>'/jquery.js', :type=>"text/javascript"}
	%body
		#top_bar
			#top_bar_contents
				#logo
				#search_bar
					%input{:type=>"text", :placeholder => "Search"}
				#link_bar
					%ul
						%li
							%a{:href=>"/projects"} Home
						%li
							%a{:href=>"/projects/new"} New Project
						%li
							%a{:href=>"/queues"} Job Queues
				#login_bar
					%ul
						%li
							%a{:href=>"/login"} Login
		#content
			#left_content.section
				= yield_content :left
			#right_content.section
				= yield_content :right
			#main_content.section
				= yield